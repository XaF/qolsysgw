version: '3'
services:
  # HomeAssistant
  homeassistant:
    image: homeassistant/home-assistant
{% if RUNNING_IN_CI %}
    network_mode: host
    extra_hosts:
      - "mosquitto:host-gateway"
{% else %}
    networks:
      - qolsysgw
    ports:
      - "{{ HA_PORT }}:8123"
{% endif %}
    volumes:
      - {{ WORKSPACE }}/homeassistant:/config
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped

  # MQTT
  mosquitto:
    image: eclipse-mosquitto
{% if RUNNING_IN_CI %}
    network_mode: host
{% else %}
    networks:
      - qolsysgw
{% endif %}
    volumes:
      - {{ WORKSPACE }}/mosquitto:/mosquitto/config
    restart: unless-stopped

  # AppDaemon
  appdaemon:
    image: acockburn/appdaemon
{% if RUNNING_IN_CI %}
    network_mode: host
{% else %}
    networks:
      - qolsysgw
{% endif %}
    extra_hosts:
{% if RUNNING_IN_CI %}
      - "homeassistant:host-gateway"
      - "mosquitto:host-gateway"
{% else %}
      - "host.docker.internal:host-gateway"
{% endif %}
    volumes:
      - {{ WORKSPACE }}/appdaemon:/conf
      - {{ ROOT_DIR }}/apps/qolsysgw:/conf/apps/qolsysgw:ro
    depends_on:
      - homeassistant
      - mosquitto
    restart: unless-stopped

{% if not RUNNING_IN_CI %}
networks:
  qolsysgw:
    name: qolsysgw-network
{% endif %}
